<div class="section">
  <div class="container is-widescreen">
    <div class="page-content block">
      <%= form_for(
        resource,
        as: resource_name,
        url: password_path(resource_name),
        html: { method: :put }
        ) do |f|
      %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", class: "label" %><br />
          <div class="control">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password", class: "label" %><br />
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Reset my password", class: "button is-success" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


