<div class="page-content block">
  <%= form_with(model: attachment, url: attachment_path(attachment), local: true, data: {turbo: false}) do |form| %>
    <% if attachment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>

        <ul>
        <% attachment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <p class="label">Image</p>
      <%= image_tag(attachment.variant(resize_to_limit: [536, 536])) %>
    </div>

    <div class="field">
      <%= form.label :caption, class: "label" %>
      <div class="control">
        <%= form.text_field :caption, id: :attachment_caption, class: "input" %>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= form.submit 'Update', class: "button is-success" %>
      </div>
    </div>
  <% end %>
</div>
