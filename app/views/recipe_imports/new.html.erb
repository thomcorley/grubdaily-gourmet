<div class="section new-recipe-import">
  <div class="container">
  	<div class="page-content block">

			<%= form_with url: "/recipe_imports/create", method: "post", html: {data: {turbo: false}} do |form| %>
		    <div class="field">
		      <%= form.label(:content, "New Recipe", class: "label") %>
		      <div class="control">
		      	<%= form.text_area(:content, id: :recipe_import_content, class: "textarea") %>
		      </div>
		    </div>
				<br>

		    <div class="field">
		      <div class="control">
						<%= form.submit("Create", class: "button is-success") %>
		      </div>
		    </div>
			<% end %>
			</div>
  </div>
</div>
