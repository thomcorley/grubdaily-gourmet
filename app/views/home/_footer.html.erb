<section class="section is-small light-green-section">
  <div id="subscribe" class="subscribe-form">
    <div class="section-title has-text-centered">
      <h2 class="is-size-3 is-size-4-mobile">
        Subscribe to my mailing list
      </h2>
    </div>

    <div class="is-flex is-justify-content-center">
      <%= form_with model: @email_subscriber, url: email_subscribers_path, id: "subscriber-form", data: { turbo: "false" } do |form| %>
        <%= hidden_field_tag :re_captcha, :re_captcha_token %>

        <div class="field has-addons">
          <div class="control">
            <%= form.email_field :email,
              class: "input is-medium email-field",
              placeholder: "Enter your email"
            %>
          </div>

          <div class="control">
            <%= form.submit value: "Sign up",
              class: "button is-medium submit-button",
              "data-sitekey" => recaptcha_site_key,
              "data-callback" => "onSubmit",
              "data-action" => "submit"
            %>
          </div>
        </div>

        <% if flash[:validation_error] %>
          <div class="notice"><%= flash[:validation_error].sub("Validation failed: Email", "Error: email") %></div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

